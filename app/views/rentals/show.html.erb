
<%#= turbo_frame_tag "rentals_frame" do %>
  <div class="container">
    <h1>Votre reservation</h1>
        <div class="featured-car-card">
          <div class="card-banner">
            <%= image_tag "#{@rental.car_category.name}.png", alt: 'Description de l\'image' %>
          </div>

          <div class="card-content">

            <div class="card-title-wrapper">
              <h3 class="h3 card-title">
                <%= @rental.car.car_category.name %>
              </h3>

              <div class="year" value="2021">2021</div>
            </div>

            <ul class="card-list">

              <li class="card-list-item">

                <span class="card-item-text">Du: <%= @rental.starts_at.strftime("%d/%m/%Y") %></span>
              </li>

              <li class="card-list-item">

                <span class="card-item-text">Au: <%= @rental.ends_at.strftime("%d/%m/%Y") %></span>
              </li>

              <li class="card-list-item">

                <span class="card-item-text">500km inclus</span>
              </li>

            </ul>

            <div class="card-price-wrapper">

              <p class="card-price">
                <strong><%= @rental.price %> â‚¬</strong>
              </p>
              <%= link_to "Update", edit_rental_path(@rental), class: "btn btn-primary" %>
            </div>
            <% if @rental_event %>
              <h6 class="mt-4">Photos de votre checkin:</h6>
              <hr />
            <% end %>
            <div class="photos-container-show mt-3">
              <% if @rental_event %>
                <% @rental_event.photos.each do |photo| %>
                  <%= cl_image_tag photo.key, alt: "Photo #{photo}", class: "gallery-show" %>
                <% end %>
              <% end %>
            </div>
          </div>

        </div>

<div class="d-flex flex-column justify-content-center mt-4 mb-5">
  <%= link_to "Commencer ma location",
            new_rental_rental_event_path(@rental, event_type: "check_in"),
            class: "btn btn-primary" %>
  <%= link_to "Voir mes reservations", rentals_path, class: "reservations btn btn-primary  mt-1"%>
</div>
<%# end %>
