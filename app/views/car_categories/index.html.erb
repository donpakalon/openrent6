<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <div id="movies">
        <% if @available_categories.any? %>
          <% @available_categories.each do |cat| %>
            <h4><%= cat.id %></h4>
            <p><%= cat.name %></p>
          <% end %>
        <% else %>
          <em>Aucune voiture disponible pour les dates demand√©s.</em>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: car_categories_path, method: :get, class: "d-flex" do %>
      <%= date_field_tag :start_date,
            params[:start_date],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
        <%= date_field_tag :end_date,
            params[:end_date],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
