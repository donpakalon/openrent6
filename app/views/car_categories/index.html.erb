  <div class="banner-img">
    <%= image_tag "banner-img.jpg" %>
  </div>
  <div class="search-dates mt-5">
    <%= form_with url: car_categories_path, method: :get do %>
      <div class="date-inputs">
        <%= text_field_tag :start_date,
              params[:start_date],
              class: "form-control",
              placeholder: "Date de début",
              data: { controller: "datepicker" }
          %>
        <%= text_field_tag :end_date,
              params[:end_date],
              class: "form-control",
              placeholder: "Date de fin",
              data: { controller: "datepicker" }
          %>
      </div>
      <div class="button d-flex justify-content-center mt-3">
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>


<div class="cards-container">
  <% @available_categories.each do |category| %>
    <div class="card-category">
    <div class="card-content">
      <h2><%= category.name %></h2>
    </div>
    <%= image_tag 'voiture.jpg', alt: 'Description de l\'image' %>
    <p class="price"><%= category.calculate_price(params[:start_date], params[:end_date]) %></p>
  </div>
  <% end %>
</div>
