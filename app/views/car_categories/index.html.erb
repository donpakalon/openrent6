<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: car_categories_path, method: :get, class: "d-flex" do %>
      <%= date_field_tag :start_date,
            params[:start_date],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
        <%= date_field_tag :end_date,
            params[:end_date],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="cards-container">
  <% @available_categories.each do |category| %>
    <div class="card-category">
      <div class="card-content">
        <h2><%= category.name %></h2>
      </div>
      <%= link_to car_category_path(category) do %>
        <%= image_tag 'voiture.jpg', alt: 'Description de l\'image' %>
      <% end %>
      <p class="price"><%= category.calculate_price(params[:start_date], params[:end_date]) %> €</p>
    </div>
  <% end %>

</div>
