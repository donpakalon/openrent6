<div class="time-container"
  data-controller="date-selector-time-picker"
    data-action="date-selector-card:selectionSender@window->date-selector-time-picker#selectionListener">
  <div class="time-range-container">
    <% time_ranges = {
        "matin tôt" => ["00:30", "01:00", "01:30", "02:00", "02:30", "03:00", "03:30", "04:00", "04:30", "05:00", "05:30", "06:00"],
        "avant midi" => ["06:00", "06:30", "07:00", "07:30", "08:00", "08:30", "09:00", "09:30", "10:00", "10:30", "11:00", "11:30"],
        "après midi" => ["12:00", "12:30", "13:00", "13:30", "14:00", "14:30", "15:00", "15:30", "16:00", "16:30", "17:00", "17:30"],
        "avant minuit" => ["18:00", "18:30", "19:00", "19:30", "20:00", "20:30", "21:00", "21:30", "22:00", "22:30", "23:00", "23:30"]
    } %>

    <% time_ranges.each do |range, times| %>
      <div class="time-range" data-action="click->date-selector-time-picker#selectTimeRange" data-range="<%= range %>">
        <%= range %> <!-- Time Range Button -->
      </div>
    <% end %>
  </div>

  <!-- Time Slot Buttons for the Selected Range -->
  <div class="time-slot-container">
    <% time_ranges.each do |range, times| %>
      <div class="time-slot-group" data-date-selector-time-picker-target="timeSlotGroup" data-time-range="<%= range %>" style="display: none;">
        <% times.each do |time| %>
          <% hours, minutes = time.split(":") %> <!-- Split time into hours and minutes -->
          <div class="time-slot"
               data-action="click->date-selector-time-picker#selectTime"
               data-hours="<%= hours %>"
               data-minutes="<%= minutes %>">
            <%= time %> <!-- Individual Time Slot -->
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
